{
  "devDependencies": {
    "husky": "^9.0.11"
  },
  "scripts": {
    "format:find": "cat .fmtignore | grep -v \"^#\" | xargs -I {} echo -n \"-e \\\"{}\\\" \" | xargs -I {} sh -c \"find ./ -iname \\\"*.typ\\\" | grep -v {}\"",
    "format:check": "npm run format:find | xargs typstfmt --check --verbose",
    "format:fix": "npm run format:find | xargs typstfmt",
    "typos:check": "typos",
    "typos:fix": "typos -w",
    "clean": "find ./  -iname \"*.pdf\" | xargs rm",
    "prepare": "husky",
    "install": "./prepare.sh",
    "build": "typst compile main.typ --font-path ./assets/fonts/"
  }
}